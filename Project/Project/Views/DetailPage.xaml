<?xml version="1.0" encoding="utf-8" ?>
<rg:PopupPage  xmlns:rg="http://rotorgames.com"
               xmlns="http://xamarin.com/schemas/2014/forms"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               x:Class="Project.Views.DetailPage">

    <Grid HeightRequest="350" VerticalOptions="End">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Frame Grid.RowSpan="2" HeightRequest="300" VerticalOptions="End" CornerRadius="50" Padding="20,0" BackgroundColor="White">
            <Grid VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
                <Image Source="chat.png" HorizontalOptions="Center" VerticalOptions="Center" Aspect="Fill" HeightRequest="80" WidthRequest="80" Margin="0,-40,0,0"/>
                <StackLayout Orientation="Vertical" Spacing="10" VerticalOptions="Center" HorizontalOptions="Center" >
                    <Label Text="SAAAA" HorizontalTextAlignment="Center"></Label>
                    <Label Text=" Popup mesaj ekranı "></Label>
                </StackLayout>
            </Grid>
        </Frame>
        <Button Grid.Row="1" Text="DEVAM" HeightRequest="45" CornerRadius="30" BackgroundColor="Firebrick" TextColor="White" Clicked="Button_Clicked" />

    </Grid>
   
</rg:PopupPage>